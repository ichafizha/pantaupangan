  body.login
    
    .mdl-card.mdl-shadow--2dp
      form(method='POST')
        .mdl-card__title
          h2.mdl-card__title-text login
        .mdl-card__supporting-text
          .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            input.mdl-textfield__input(type='text' name='email')
            label.mdl-textfield__label Email
          .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            input.mdl-textfield__input(type='password' name='password')
            label.mdl-textfield__label Password
          input.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent(type='submit' value='Login' style='width:100%')
    script(src='/js/lib/jquery.js')
