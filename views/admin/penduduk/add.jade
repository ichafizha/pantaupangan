extends ../../layout

block content
  .demo-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
    include ../includes/header
    include ../includes/sidebar
    
    if !updates
      - var data = {tahun: '', penduduk: '', pph: ''}
    else
      - var data = updates
    
    main.mdl-layout__content.mdl-color--grey-100.pos-center-center
      .mdl-card.mdl-shadow--2dp
        form(method='POST')
          .mdl-card__supporting-text
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input.mdl-textfield__input(type='number' name='tahun' value='#{data.tahun}')
              label.mdl-textfield__label Tahun
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input.mdl-textfield__input(type='number' name='penduduk' value='#{data.penduduk}')
              label.mdl-textfield__label Jumlah Penduduk
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input.mdl-textfield__input(type='number' name='pph' value='#{data.pph}')
              label.mdl-textfield__label Pola Pangan Harapan
            input.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent(type='submit' value='Simpan' style='width:100%')
