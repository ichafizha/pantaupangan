extends ../../layout

block content
  .demo-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
    include ../includes/header
    include ../includes/sidebar
    
    main.mdl-layout__content.mdl-color--grey-100
      .mdl-grid.demo-content
        .mdl-cell--6-col.mdl-cell--3-offset.mdl-grid
          table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp(style='width:100%;')
            thead
              th.mdl-data-table__cell--non-numeric No.
              th.mdl-data-table__cell--non-numeric Tahun
              th.mdl-data-table__cell--non-numeric Jumlah Penduduk
              th.mdl-data-table__cell--non-numeric PPH (Pola Pangan Harapan)
              th
            each p, i in penduduks
              tr(class='id-#{p._id}')
                td= i+1
                td= p.tahun
                td= p.penduduk
                td= p.pph
                td
                  a(href='javasript:;' onClick='deletePenduduk("#{p._id}", "#{p.penduduk}", "#{p.tahun}") ').material-icons(role='presentation') delete
                td
                  a(href='/penduduk/#{p._id}/update').material-icons(role='presentation') mode_edit
    a#addPenduduk.fab.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored(href='/penduduk/add')
      i.material-icons add
    
    div.mdl-tooltip.mdl-tooltip--left(for='addPenduduk') Add Penduduk