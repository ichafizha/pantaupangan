extends ../../layout

block content
  .demo-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
    include ../includes/header
    include ../includes/sidebar
    
    if !updates
      - var data = {name: '', email: '', luas: '', password:''}
    else
      - var data = updates
    
    main.mdl-layout__content.mdl-color--grey-100.pos-center-center
      .mdl-card.mdl-shadow--2dp
        form(method='POST')
          .mdl-card__supporting-text
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input.mdl-textfield__input(type='text' name='nama' value='#{data.name}')
              label.mdl-textfield__label Nama
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input.mdl-textfield__input(type='text' name='email' value='#{data.email}')
              label.mdl-textfield__label Email
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input.mdl-textfield__input(type='password' name='password' value='#{data.password}')
              label.mdl-textfield__label Password
            input.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent(type='submit' value='Simpan' style='width:100%')
