extends ../layout

block content-client
	.demo-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
		include ./includes/header

		main.mdl-layout__content.mdl-layout__content--margin.margin-new
			#overview.mdl-layout__tab-panel.is-active
				.stat-harga-container
					each stat in statKomoditas
						.stat-harga.mdl-shadow--2dp
							.stat-harga__left
								p 
									if stat.status == 'naik'
										i.material-icons.naik arrow_upward
									if stat.status == 'turun'
										i.material-icons.turun arrow_downward
									if stat.status == 'stabil'
										i.material-icons.stabil menu
									
							.stat-harga__content
								.stat-harga__content--header
									p= stat.komoditas
								.stat-harga__content--price
									p Rp. #{stat.hargaBaru}/kg

				section.section--center.mdl-grid.mdl-grid--no-spacing.mdl-shadow--2dp
					h4.card-header= today
					.mdl-card.mdl-card--custom.mdl-cell.mdl-cell--12-col
						ul.mdl-list
							each k in komoditas
								li.mdl-list__item.mdl-list__item--custom
									span(style='flex:1')= k.komoditas
									div(style='width:20%; text-align:center; flex:1')
										span Rp. #{k.hargaString}/kg
									span(style='flex:1; text-align: right;')
										a.mdl-button.mdl-js-button.mdl-button--primary(href='/komoditas/#{k.komoditas}')
											| Lihat Fluktuasi


